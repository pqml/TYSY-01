@font-face
  font-family SquafoTysyRegular
  src url('squafo_tysy-regular-webfont.woff2') format('woff2'), url('squafo_tysy-regular-webfont.woff') format('woff')
  font-weight normal
  font-style normal

body
  font-family SquafoTysyRegular, Arial
  margin 0
  padding 0
  overflow hidden

.inverter.inverted
  filter: invert(100%);

#app
  margin 0
  padding 0
  width 100vw
  height 100vh

.controller-wrapper
  position absolute
  top 0
  right 0
  bottom 0
  width 210px
  bottom 40px
  padding 30px 0
  margin 0
  background white
  border-left black 1px solid
  overflow-y scroll

#letterlog
  white-space pre
  position fixed
  bottom 0
  right 0
  border-top 1px solid black
  background white
  height 40px
  line-height 40px
  width 100%

#letterlog p
  font-family SquafoTysyRegular, Arial
  -webkit-font-smoothing antialiased
  margin 0 20px
  float right
  text-align right

button
  display block
  font-family SquafoTysyRegular, Arial
  -webkit-font-smoothing antialiased
  // transform translateY(10px)
  margin 15px auto 20px auto
  border 1px solid black
  background transparent
  opacity 1
  outline none
  width 120px
  height 50px

button:hover
  opacity 1