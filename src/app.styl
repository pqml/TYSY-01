body
  margin 0
  padding 0
  overflow hidden

#app
  margin 0
  padding 0
  width 100vw
  height 100vh

#controller
  position fixed
  padding-left 10px
  bottom 50px
  left 0

#letterlog
  overflow scroll
  position fixed
  bottom 0
  left 0
  border-top 1px solid #b3b3b3
  background white
  height 40px
  line-height 40px
  width 100%

#letterlog p
  margin 0 20px
  text-align right

button
  float left
  transform translateY(10px)
  margin 0 10px
  border 1px solid black
  background transparent
  opacity 0.3
  outline none
  width 100px
  height 50px

button:hover
  opacity 1